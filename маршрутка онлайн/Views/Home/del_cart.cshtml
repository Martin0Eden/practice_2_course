@model cart

@{
    ViewData["Title"] = "Удалить";
}
<div id="overlay_in_taxi">
    <div id="form-container">
        <form asp-action="del_cart" asp-controller="Home" method="post" class="form">
            <h2>Удалить</h2>
            <label>Название:</label>
            <input asp-for="name" type="text" required>
            <button type="submit">Отправить</button>
        </form>
        <a href="/Home/Administration" id="close-form_in_taxi">Закрыть форму</a>
    </div>
</div>



