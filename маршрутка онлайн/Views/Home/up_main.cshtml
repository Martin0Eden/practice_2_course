@model card_index

@{
    ViewData["Title"] = "Изменение";
}

<div id="overlay_in_taxi">
    <div id="form-container">
        <form asp-action="up_main" asp-controller="Home" method="post" class="form">
            <h2>Добавить</h2>
            <label>Название:</label>
            <input asp-for="zag" type="text" required>

            <label>Текст 1:</label>
            <textarea asp-for="text1" type="text" required></textarea>

            <label>Текст 2:</label>
            <input asp-for="text2" type="text" required>
            <label>Текст 3:</label>
            <input asp-for="text3" type="text">
            <label>Картинка:</label>
            <input asp-for="img" type="text">

            <button type="submit">Отправить</button>
        </form>
        <a href="/Home/Administration">Закрыть форму</a>
    </div>
</div>


